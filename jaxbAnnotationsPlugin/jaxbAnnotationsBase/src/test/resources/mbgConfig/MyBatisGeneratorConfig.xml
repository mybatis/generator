<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

	<properties resource="MyBatisGeneratorConfig.properties" />


	<classPathEntry location="${hsql.jdbc.driver.jar.path}" /> <!-- The JDBC driver location. In our case, will be read from the MyBatisGeneratorXml.properties file. -->

	<context id="FieldTypeNoLobs" targetRuntime="MyBatis3" defaultModelType="conditional">

